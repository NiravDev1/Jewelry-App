<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerDashbord.SelllerDashboardActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/welcome_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:elegantTextHeight="true"
        android:elevation="25dp"
        android:fontFamily="@font/opensaucesans_bold"
        android:gravity="center"
        android:text="Welcome   "
        android:textSize="20sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/seller_dashboard_SellerNAme_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:elegantTextHeight="true"
        android:elevation="25dp"
        android:fontFamily="@font/opensaucesans_bold"
        android:gravity="center"
        android:text="Seller"
        android:layout_toRightOf="@id/welcome_text_id"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/add_product_id"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/welcome_text_id"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/appicon_app_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/opensaucesans_bold"
            android:gravity="center"
            android:text="Add Product"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/list_product_id"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/welcome_text_id"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="10dp"
        app:cardElevation="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/opensaucesans_bold"
            android:gravity="center"
            android:text="List Product"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sell_product_id"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/add_product_id"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/bg_color"
        app:cardCornerRadius="10dp"
        app:cardElevation="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/opensaucesans_bold"
            android:gravity="center"
            android:text="Sell Product"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>